/* 登录 注册 忘记密码页面样式 */
page {
  background: #fafafa;
}

/* 认证页面容器 */
.auth_container {
  padding: 32rpx;
}

/* 认证页面标题区域 */
.auth_title {
  padding: 48rpx 0 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

/* 认证页面标题文本 */
.auth_title_text {
  font-size: 48rpx;
  font-weight: bold;
  flex: 1;
  text-align: left;
}

/* 登录页面跳转 */
.auth_title_login {
  font-size: 30rpx;
  text-align: right;
  align-self: flex-end;
}

/* 注册页面跳转 */
.auth_title_register {
  font-size: 30rpx;
  text-align: right;
  align-self: flex-end;
}

/* icon样式 */
.auth_icon {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 40rpx;
  padding-right: 30rpx;
}

/* 手机号icon样式 */
.auth_mobile {
  width: 40rpx;
  height: 40rpx;
}

/* 密码icon样式 */
.auth_lock {
  width: 40rpx;
  height: 40rpx;
}

/* 忘记密码 */
.auth_forget {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #d8d8d8;
  padding-left: 30rpx;
}

/* 认证页面表单区域 */
.auth_form {
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0rpx 0rpx 5rpx rgba(42, 42, 42, 0.02);
  margin-bottom: 80rpx;
}

/* 验证码区域样式 */
.auth_code {
  padding-left: 30rpx;
}
