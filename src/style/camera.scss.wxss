.component_camera_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.component_camera_container_area {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  transition: all 0.5s;
  transform: translateY(0);
}

.component_camera_container_area_hide {
  transform: translateY(100%);
}

.component_camera_action {
  width: 95%;
  border-radius: 26rpx;
  background: #fff;
  overflow: hidden;
}

.component_camera_action_title {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.component_camera_action_title_text {
  font-size: 24rpx;
  color: #909090;
}

.component_camera_action_button {
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  border-top: 2rpx solid #eee;
}

.component_camera_action_button_text {
  font-size: 38rpx;
  color: #007aff;
}

.component_camera_action_close {
  width: 95%;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  border-radius: 26rpx;
  background: #fff;
  margin: 15rpx auto 50rpx;
}

.component_camera_action_close_text {
  font-size: 38rpx;
  font-weight: bold;
  color: #007aff;
}
