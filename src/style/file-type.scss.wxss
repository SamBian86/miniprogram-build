.file_type_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.file_type_container_area {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  transition: all 0.5s;
  transform: translateY(0);
}

.file_type_container_area_hide {
  transform: translateY(100%);
}

.file_type_action {
  width: 100%;
  border-top-left-radius: 26rpx;
  border-top-right-radius: 26rpx;
  background: #fff;
  overflow: hidden;
  border-bottom: 20rpx solid #eee;
}

.file_type_action_title {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.file_type_action_title_text {
  font-size: 24rpx;
  color: #909090;
}

.file_type_action_button {
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  border-top: 2rpx solid #eee;
}

.file_type_action_button_text {
  font-size: 34rpx;
  color: #000;
}

.file_type_action_close {
  width: 100%;
  height: 160rpx;
  line-height: 110rpx;
  text-align: center;
  background: #fff;
}

.file_type_action_close_text {
  font-size: 34rpx;
  color: #000;
}
